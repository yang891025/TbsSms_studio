<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/text_page_share_windows"
    android:gravity="right"
    android:orientation="horizontal" >

    <Button
        android:id="@id/share_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/share_message_btn"
        android:gravity="bottom|center_horizontal"
        android:text="短 信"
        android:textColor="@color/light_blue"
        android:textSize="8.0sp" />
    
    <Button
        android:id="@id/share_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/share_email_btn"
        android:gravity="bottom|center_horizontal"
        android:text="邮件"
        android:textColor="@color/light_blue"
        android:textSize="8.0sp"/>


</LinearLayout>